<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="user-motto">{{motto}}</text>
    </block>
  </view>
  <view class="page-body">
    <view class="btn-area">
      <navigator url="../main/entrance?title=keyichuancan" hover-class="navigator-hover">
        <button type="default">跳转到入口界面</button>
      </navigator>
      <navigator url="../card/card?title=123" hover-class="navigator-hover">
        <button type="default">跳转到名片界面</button>
      </navigator>  
      <navigator url="../add-contact/add-contact" hover-class="navigator-hover">
        <button type="default">创建联系人</button>
      </navigator>
    </view>
  </view>
</view>